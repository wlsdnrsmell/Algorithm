package etc;

import java.util.Scanner;

/**
 * @author ginTonic
 * @Title 클리보드
 * 2018. 4. 8.
 */
public class No11058 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int[] d= new int[n];
		d[1] = 1; d[2]=2; d[3]=3;
		for(int i=2;i<=n-1; i++) {
			d[i] = d[i-1] + 1;
			if(d[i-1]+1 < d[n-i-1] * (i+1)) {
				d[i] = d[n-i-1] * (i+1);
			}
		}
		System.out.println(d[n]);
	}

}
